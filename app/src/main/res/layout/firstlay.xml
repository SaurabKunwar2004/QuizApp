<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FirstActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ys">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#388E3C"
        android:id="@+id/welcome">

        <android.widget.Button
            android:id="@+id/BackbtnF"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information technology"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_alignEnd="@+id/BackbtnGe"
            android:textColor="#fff"
            android:textSize="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Modes"
        android:id="@+id/mode"
        android:textAlignment="center"
        android:layout_below="@+id/welcome"
        android:textSize="35dp"
        android:textColor="#000"
        android:textStyle="bold"
       android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"

        />


    <android.widget.Button
        android:id="@+id/easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mode"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/custom_color"
        android:text="   Easy  "
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="35dp" />


    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/easy"
        android:layout_margin="25dp"
        android:id="@+id/medium"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:text="  Medium  "
        android:textSize="35dp"
        android:textAllCaps="false"
        android:background="@drawable/custom_color"/>


    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medium"
        android:layout_margin="25dp"
        android:id="@+id/hard"
        android:layout_centerHorizontal="true"
        android:text="  Hard  "
        android:textColor="#fff"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:background="@drawable/custom_color"/>
</RelativeLayout>
