<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ys">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#388E3C"
        android:id="@+id/linear">

        <android.widget.Button
            android:id="@+id/BackbtnSci"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science"
            android:layout_alignEnd="@+id/BackbtnS"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:id="@+id/toolbartitle"/>


    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Choose Modes"
        android:id="@+id/mode"
        android:layout_below="@+id/linear"
        android:textSize="35dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"

        />


    <android.widget.Button
        android:id="@+id/scbasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mode"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/custom_color"
        android:text="  Basic  "
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="35dp" />

    <android.widget.Button
        android:id="@+id/scadv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scbasic"
        android:layout_margin="25dp"
        android:layout_marginTop="143dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/custom_color"
        android:text="  Advanced  "
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="35dp" />



</RelativeLayout>
